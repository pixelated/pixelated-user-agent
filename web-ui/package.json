    "bower": "1.7.9",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "dompurify": "^0.8.4",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "expect": "^1.20.2",
    "file-loader": "^0.10.0",
    "font-awesome": "^4.7.0",
    "handlebars": "^4.0.5",
    "he": "^1.1.0",
    "html-minifier": "2.1.6",
    "i18next": "^6.1.2",
    "i18next-browser-languagedetector": "^1.0.1",
