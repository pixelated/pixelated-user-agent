{
  "name": "pixelated-user-agent-web-ui",
  "version": "0.0.0",
  "description": "The front-end module for the pixelated user agent",
  "repository": "https://github.com/pixelated-project/pixelated-user-agent",
  "private": true,
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
